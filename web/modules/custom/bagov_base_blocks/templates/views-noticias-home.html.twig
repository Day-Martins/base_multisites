<div id="{{ id }}" class="noticias-home">
    {# Noticia corpo. #}
    <div class="row gy-4">
        {% for row in rows %}
        {% set col_classes = ['col-xs-12', row . noticia_principal ? '' : 'col-md-6'] %}
        <div class="{{ col_classes | join(' ') }}">
            <div class="noticias-container">
                <div class="noticias-wrapper">
                    {{ row . image }}
                    {% if row.title or row.description %}
                    {%  if use_caption %}
                    <div class="noticias-caption">
                        {% endif %}
                        {% if row.title %}
                        <h3>{{ row . title }}</h3>
                        {% endif %}
                        {% if row.description %}
                        <p>{{ row . description }}</p>
                        {% endif %}
                        {%  if use_caption %}
                    </div>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="noticias-home-footer d-flex flex-row-reverse py-4">
        <br>
        {{ link('Mais not√≠cias', 'internal:/noticias') }}
    </div>
</div>
