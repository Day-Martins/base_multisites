<div id="{{ id }}" class="noticias-relacionadas">
    {# Noticia corpo. #}
    <div class="row gy-4">
        {% if view_title %}
        <div class="col-xs-12">
            <h2 class="noticias-relacionadas-titulo">{{ view_title }}</h2>
        </div>
        {% endif %}
        {% for row in rows %}
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="noticias-relacionadas-container">
                <div class="noticias-relacionadas-wrapper">
                    {{ row . image }}
                    {% if row.title or row.description %}
                    {%  if use_caption %}
                    <div class="noticias-relacionadas-caption">
                        {% endif %}
                        {% if row.title %}
                        <h3>{{ row . title }}</h3>
                        {% endif %}
                        {% if row.description %}
                        <p>{{ row . description }}</p>
                        {% endif %}
                        {%  if use_caption %}
                    </div>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="noticias-relacionadas-footer d-flex py-4 justify-content-center">
        <br>
        {{ link('Voltar para not√≠cias', 'internal:/noticias') }}
    </div>
</div>
